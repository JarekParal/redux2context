{
  "name": "reactizer",
  "version": "0.0.0",
  "description": "The ultimate react boilerplate!",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "npm run clean && npm run babel && run-p run webpack:dev",
    "run": "node dist/server",
    "bundle": "npm run clean && npm run babel && npm run webpack",
    "babel": "babel src --out-dir dist",
    "webpack": "webpack --config etc/webpack.build.js",
    "webpack:dev": "webpack-dev-server --config etc/webpack.dev.js --inline --hot",
    "test": "jest",
    "lint": "eslint '**/*.{js,jsx}'",
    "lint:fix": "eslint '**/*.{js,jsx}' --fix",
    "flow": "flow",
    "flow:check": "flow check",
    "clean": "rimraf .tmp dist"
  },
  "keywords": [
    "react",
    "webpack",
    "isomorphic",
    "universal",
    "boilerplate"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.4.1",
    "koa-logger": "^3.1.0",
    "koa-static": "^4.0.2",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "styled-components": "^2.2.3"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-airbnb": "^2.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.59.0",
    "jest": "^21.2.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.2",
    "raf": "^3.4.0",
    "rimraf": "^2.6.2",
    "static-site-generator-webpack-plugin": "^3.4.1",
    "style-loader": "^0.19.0",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4"
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "./etc/enzymeSetup"
    ]
  }
}
